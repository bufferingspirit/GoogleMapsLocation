<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.googlemapslocation.view.mainactivity.MainActivity">

    <Button
        android:text="Get Location"
        android:onClick="getLocation"
        android:id="@+id/btnGetLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Lattitude"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="Longitude"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etLattitude"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etLongitude"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Get Latitude and Longitude"
        android:onClick="getLocationData"
        android:id="@+id/btnGetLatLng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Get Address"
        android:onClick="getLocationData"
        android:id="@+id/btnGetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Get Lat and Lng with Geocoder"
        android:onClick="getLocationData"
        android:id="@+id/btnGetLatLngGeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Get Address with Geocoder"
        android:onClick="getLocationData"
        android:id="@+id/btnGetAddressGeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Go To Map"
        android:onClick="startMapActivity"
        android:id="@+id/btnStartMapsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
